@page
@model ServerHeThongKiem.Pages.DeviceManagerPage.IndexModel
@{
}

<h2 class="text-center mb-3">Devices</h2>
<a class="btn btn-primary" asp-page="/Devices/Create">New Device</a>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Mã Thiết Bị</th>
            <th>Tên Thiết Bị</th>
            <th>Khách Hàng</th>
            <th>Địa Chỉ</th>
            <th>Số Điện Thoại</th>
            <th>Ngày Đăng Ký</th>
            <th class="text-center">Thao Tác</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var device in Model.DeviceList)
        {
            <tr>
                <td>@device.Id</td>

                <td><strong>@device.DeviceID</strong></td>

                <td>@device.DeviceName</td>

                <td>@device.Customer</td>

                <td>@device.Address</td>

                <td>@device.Phone</td>

                <td>@device.CreateDate.ToString("dd/MM/yyyy")</td>

                <td class="text-center">
                    @if (device.Status == "Online")
                    {
                        <span class="badge rounded-pill bg-success" title="Online">
                            <i class="bi bi-circle-fill"></i> ●
                        </span>
                    }
                    else
                    {
                        <span class="badge rounded-pill bg-danger" title="Offline">
                            <i class="bi bi-circle-fill"></i> ●
                        </span>
                    }
                </td>

                <td>
                    <a asp-page="./Details" asp-route-id="@device.Id" class="btn btn-primary btn-sm">
                        Xem chi tiết
                    </a>
                </td>

                <td class="text-center">
                    <form method="post" asp-page-handler="Delete" asp-route-id="@device.Id"
                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa thiết bị @device.DeviceID không?');">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>