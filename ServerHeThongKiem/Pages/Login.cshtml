@page
@model ServerHeThongKiem.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng Nhập Hệ Thống";
    Layout = null; // Không dùng Layout chung để trang Login đứng độc lập
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Server IoT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%); /* Màu xanh công nghiệp */
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-login {
            width: 100%;
            max-width: 400px;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

        .login-header {
            background-color: #f8f9fa;
            border-radius: 15px 15px 0 0;
            padding: 30px 20px;
            text-align: center;
        }

        .login-icon {
            font-size: 3rem;
            color: #0d6efd;
        }

        .form-floating:focus-within {
            z-index: 2;
        }
    </style>
</head>
<body>

    <div class="card card-login animate__animated animate__fadeInDown">
        <div class="login-header">
            <div class="mb-2"><i class="bi bi-cpu-fill login-icon"></i></div>
            <h4 class="fw-bold text-dark">HỆ THỐNG GIÁM SÁT</h4>
            <p class="text-muted small mb-0">Đăng nhập để truy cập server</p>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small text-center"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" placeholder="Tên đăng nhập" />
                    <label asp-for="Input.Username"><i class="bi bi-person-fill"></i> Tên đăng nhập</label>
                    <span asp-validation-for="Input.Username" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu" />
                    <label asp-for="Input.Password"><i class="bi bi-lock-fill"></i> Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label text-secondary small">Ghi nhớ</label>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg fw-bold">
                        ĐĂNG NHẬP <i class="bi bi-arrow-right-short"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3 bg-white border-0" style="border-radius: 0 0 15px 15px;">
            <small class="text-muted">© 2026 Server Hệ Thống Kiểm</small>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>